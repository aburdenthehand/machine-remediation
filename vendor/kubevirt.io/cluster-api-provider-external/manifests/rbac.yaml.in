---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: clusterapi-external-provider
  labels:
    kubevirt.io: "clusterapi-external-provider"
rules:
  - apiGroups:
      - cluster.k8s.io
    resources:
      - clusters
      - machines
    verbs:
      - get
      - list
      - update
      - watch
  - apiGroups:
      - cluster.k8s.io
    resources:
      - machines/status
    verbs:
      - update
  - apiGroups:
      - ''
    resources:
      - nodes
      - pods
    verbs:
      - list
      - watch
  - apiGroups:
      - ''
    resources:
      - events
    verbs:
      - update
      - create
      - patch
  - apiGroups:
      - batch
    resources:
      - jobs
    verbs:
      - create
      - update
      - delete
      - list
      - watch
      - get
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: clusterapi-external-provider
  namespace: {{.Namespace}}
  labels:
    kubevirt.io: "clusterapi-external-provider"
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: clusterapi-external-provider
  labels:
    kubevirt.io: "clusterapi-external-provider"
roleRef:
  kind: ClusterRole
  name: clusterapi-external-provider
  apiGroup: rbac.authorization.k8s.io
subjects:
  - kind: ServiceAccount
    name: clusterapi-external-provider
    namespace: {{.Namespace}}
