---
apiVersion: v1
kind: ServiceAccount
metadata:
  labels:
    kubevirt.io: ""
  name: machine-remediation-operator
  namespace: {{.Namespace}}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  labels:
    kubevirt.io: ""
  name: machine-remediation-operator
rules:
- apiGroups:
  - machineremediation.kubevirt.io
  resources:
  - machineremediationoperators
  - machineremediationoperators/status
  verbs:
  - get
  - list
  - update
  - watch
- apiGroups:
  - ""
  resources:
  - serviceaccounts
  verbs:
  - '*'
- apiGroups:
  - apps
  resources:
  - deployments
  verbs:
  - '*'
- apiGroups:
  - rbac.authorization.k8s.io
  resources:
  - clusterroles
  - clusterrolebindings
  verbs:
  - '*'
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  labels:
    kubevirt.io: ""
  name: machine-remediation-operator
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: machine-remediation-operator
subjects:
- kind: ServiceAccount
  name: machine-remediation-operator
  namespace: {{.Namespace}}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    kubevirt.io: machine-remediation-operator
  name: machine-remediation-operator
  namespace: {{.Namespace}}
spec:
  replicas: 1
  selector:
    matchLabels:
      kubevirt.io: machine-remediation-operator
  strategy: {}
  template:
    metadata:
      labels:
        kubevirt.io: machine-remediation-operator
    spec:
      containers:
      - args:
        - --logtostderr=true
        - --v={{.Verbosity}}
        - --namespace={{.Namespace}}
        command:
        - /usr/bin/machine-remediation-operator
        image: {{.ContainerPrefix}}/machine-remediation-operator:{{.ContainerTag}}
        imagePullPolicy: {{.ImagePullPolicy}}
        name: machine-remediation-operator
        resources:
          requests:
            cpu: 10m
            memory: 20Mi
      nodeSelector:
        node-role.kubernetes.io/master: ""
      securityContext:
        runAsNonRoot: true
      serviceAccountName: machine-remediation-operator
      tolerations:
      - effect: NoSchedule
        key: node-role.kubernetes.io/master
      - key: CriticalAddonsOnly
        operator: Exists
      - effect: NoExecute
        key: node.kubernetes.io/not-ready
        operator: Exists
        tolerationSeconds: 120
      - effect: NoExecute
        key: node.kubernetes.io/unreachable
        operator: Exists
        tolerationSeconds: 120
---
apiVersion: machineremediation.kubevirt.io/v1alpha1
kind: MachineRemediationOperator
metadata:
  labels:
    kubevirt.io: machine-remediation-operator
  name: machine-remediation-operator
  namespace: {{.Namespace}}
spec:
  imagePullPolicy: {{.ImagePullPolicy}}
  imageRegistry: {{.ContainerPrefix}}
  imageTag: {{.ContainerTag}}
