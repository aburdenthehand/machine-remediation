---
apiVersion: apiextensions.k8s.io/v1beta1
kind: CustomResourceDefinition
metadata:
  labels:
    noderecovery.kubevirt.io: ""
  name: noderemediations.noderecovery.kubevirt.io
spec:
  group: noderecovery.kubevirt.io
  version: v1alpha1
  names:
    kind: NodeRemediation
    plural: noderemediations
    shortNames:
    - nr
    - nrs
    singular: noderemediation
  scope: Cluster
  validation:
    openAPIV3Schema:
      required: ["spec"]
      properties:
         spec:
           required: ["nodeName"]
---
apiVersion: v1
kind: Namespace
metadata:
  labels:
    noderecovery.kubevirt.io: ""
  name: noderecovery
---
apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    noderecovery.kubevirt.io: ""
  name: noderecovery-config
  namespace: {{.Namespace}}
data:
  remediation-config: |
    enabled:                   true
    stormThresholdInstances:   10
    triageLabels:              [ kdumpRequestedSeconds, manualTriageSeconds ]
    disruptionLabel:           recovery-seconds
    disruptionCalculation:     average
    disruptionRebootThreshold: 300 
    defaultDisruptionValue:    60
    defaultGraceSeconds:       180
    defaultRebootGraceSeconds: 360
---
apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  name: noderecovery
  namespace: {{.Namespace}}
  labels:
    noderecovery.kubevirt.io: ""
spec:
  template:
    metadata:
      annotations:
        scheduler.alpha.kubernetes.io/critical-pod: ""
        scheduler.alpha.kubernetes.io/tolerations: |
          [
            {
              "key": "CriticalAddonsOnly",
              "operator": "Exists"
            }
          ]
      labels:
        app: "noderecovery"
    spec:
      serviceAccountName: noderecovery
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: node-role.kubernetes.io/master
                operator: Exists
      tolerations:
      - key: node-role.kubernetes.io/master
        effect: NoSchedule
      containers:
        - name: noderecovery
          image: {{.ContainerPrefix}}/noderecovery:{{.ContainerTag}}
          imagePullPolicy: {{.ImagePullPolicy}}
          command:
            - "noderecovery"
          securityContext:
            runAsUser: 1001
          volumeMounts:
          - name: noderecovery-config-volume
            mountPath: /etc/noderecovery-config
      volumes:
      - name: noderecovery-config-volume
        configMap:
          name: noderecovery-config
